<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.led_on_off.led.AboutActivity"
    android:background="#fdfdfe">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="About Developer"
        android:id="@+id/abt_txt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#bf3951" />

    <ImageView
        android:id="@+id/developer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ashim"
        android:layout_below="@+id/abt_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/developer"
        android:gravity="center_vertical|center_horizontal"
        android:text="Ashim Raj Konwar"
        android:textAlignment="center"
        android:textColor="#bf3951"
        android:textSize="22dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/facebook_70x70"
        android:onClick="fb"
        android:background="@null"
        android:id="@+id/facebook"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/abt_txt"
        android:layout_toStartOf="@+id/abt_txt" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/twitter_70x70"
        android:onClick="tweet"
        android:id="@+id/twitter"
        android:background="@null"
        android:layout_alignBottom="@+id/instagram"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instagram"
        android:onClick="insta"
        android:src="@drawable/instagram_70x70"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/abt_txt"
        android:layout_toEndOf="@+id/abt_txt" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/website"
        android:onClick="web"
        android:src="@drawable/website_75x75"
        android:background="@null"
        android:layout_above="@+id/twitter"
        android:layout_alignLeft="@+id/twitter"
        android:layout_alignStart="@+id/twitter"
        android:layout_marginBottom="22dp" />
</RelativeLayout>
